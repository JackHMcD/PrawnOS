#!/usr/bin/make -f

srctree ?= .

build:
	@echo remove the references to ath9k firmware, not required for header and breaks the build
	sed -i '/CONFIG_EXTRA_FIRMWARE/d' $(srctree)/.config
	$(MAKE) KERNELRELEASE=5.4.29-3 ARCH=arm 	KBUILD_BUILD_VERSION=1 -f $(srctree)/Makefile

binary-arch:
	@echo remove the references to ath9k firmware, not required for header and breaks the build
	sed -i '/CONFIG_EXTRA_FIRMWARE/d' $(srctree)/.config
	$(MAKE) KERNELRELEASE=5.4.29-3 ARCH=arm 	KBUILD_BUILD_VERSION=1 -f $(srctree)/Makefile intdeb-pkg

clean:
	rm -rf debian/*tmp debian/files

binary: binary-arch
