#!/bin/bash

# Some files need to be diverted first for us to install our versions

PKG=prawnos-xfce-config

dpkg-divert --package $PKG --add --rename --divert /etc/lightdm/lightdm-gtk-greeter.conf.stock /etc/lightdm/lightdm-gtk-greeter.conf
dpkg-divert --package $PKG --add --rename --divert /etc/xdg/xfce4/panel/default.xml.stock /etc/xdg/xfce4/panel/default.xml

for f in xfce4-keyboard-shortcuts.xml xfce4-power-manager.xml xfce4-screensaver.xml xfce4-session.xml xfwm4.xml xsettings.xml
do
    dpkg-divert --add --package ${PKG} --rename --divert /etc/xdg/xfce4/xfconf/xfce-perchannel-xml/$f.stock /etc/xdg/xfce4/xfconf/xfce-perchannel-xml/$f
done